@board("trinkey")

// the 'board' variable is automatically created, along with
// wait, print, LEDButton, and other builtins

var go

@type("start",setup)
fun setup() {
    go = false
    device.led.fill(BLUE)
}

@type("loop",my_button_clicked)
fun my_button_clicked() {
    if(device.button.fell) {
        print("in my button done",button)
        go = not go
        if go led.fill(GREEN)
        if not go led.fill(BLUE)
        print("changed mode running to ",go)
    }
}

@type("loop",loop)
fun loop() {
    //if not go return
    if(go) {
        print("pressin mouse")
        mouse.press(Mouse.LEFT_BUTTON)
        led.fill(RED)
        wait(2)
        print("releasing mouse")
        led.fill(GREEN)
        mouse.release_all()
        print("waiting 2")
        wait(2)
    }
}
