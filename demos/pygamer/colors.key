@board("pygamer")

// built in variables
// buttons, screen, pixels
// buttons for a b select start buttons
// screen for the LED screen
// pixels for the five neopixels
print("color starting")
@type("start",setup)
fun setup() {
    print("in the setup")
    screen.fill(BLUE)
    wait(0.5)
    screen.fill(BLACK)
    pixels.fill(RED)
    pixels.show()
    wait(0.5)
    pixels.fill(BLACK)
    pixels.show()
}

@type("event",buttons,check)
fun check(event) {
    print("event happened", event.key_number, event.pressed, event.released)
    if (event.key_number == 0) {
        screen.fill(BLUE)
        pixels.fill(BLUE)
        pixels.show()
    }
    if (event.key_number == 1) {
        screen.fill(GREEN)
        pixels.fill(GREEN)
        pixels.show()
    }
    if event.key_number == 2 screen.fill(RED)
    if event.key_number == 3 screen.fill(WHITE)
}
