@board("pygamer")

print("color starting")
@type("start",setup)
fun setup() {
    print("in the setup")
    screen.fill(BLUE)
    wait(1)
    screen.fill(GREEN)
    wait(1)
    screen.fill(BLACK)
}

@type("event",buttons,check)
fun check(event) {
    print("event happened", event.key_number, event.pressed, event.released)
    if event.key_number == 0 screen.fill(BLUE)
    if event.key_number == 1 screen.fill(GREEN)
    if event.key_number == 2 screen.fill(RED)
    if event.key_number == 3 screen.fill(WHITE)
}
